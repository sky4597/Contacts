<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_contacts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.contacts.AddContacts">

    <TextView
        android:id="@+id/add_contacts_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="35dp"
        android:text="Add your contact" />

    <EditText
        android:id="@+id/add_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/add_contacts_textview"
        android:layout_below="@+id/add_contacts_textview"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/add_contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/add_contact_name"
        android:layout_below="@+id/add_contact_name"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="Enter phone number"
        android:inputType="phone" />

    <Button
        android:id="@+id/final_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/add_contact_number"
        android:layout_below="@+id/add_contact_number"
        android:layout_marginTop="29dp"
        android:onClick="addContact"
        android:text="Add" />
</RelativeLayout>
